<h1 class="text-3xl font-bold mb-10">Change password</h1>

<%= form_with model: Current.user, url: edit_password_path do |form| %>
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>
  <div class="flex flex-col gap-2 mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'border p-2 rounded-md w-full' %>
  </div>
  <div class="flex flex-col gap-2 mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: 'border p-2 rounded-md w-full' %>
  </div>

  <%= form.submit 'Update password', class: 'bg-sky-600 text-white rounded-md p-3' %>
<% end %>